</body>

<script>
  var Socket;
  function init() {
    Socket = new WebSocket('ws://' + window.location.hostname + ':81/');
    Socket.onmessage = function (event) {
      processCommand(event);
    };
  }

  function processCommand(event) {
    var obj = JSON.parse(event.data);
    document.getElementById('steering_actual_volt').innerHTML = obj.ActualV;
    document.getElementById('steering_left_volt').innerHTML = obj.LeftV;
    document.getElementById('steering_right_volt').innerHTML = obj.ActualV;
  }

  window.onload = function (event) {
    init();
  }  
</script>

